<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".AddItemActivity"
    android:background="#fff6fff7"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="#ffaaff56"
        android:layout_alignParentTop="false"
        android:id="@+id/RefriOrFreezer">

        <Button
            android:background="@drawable/buttonstylegreen"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="Refrigerator"
            android:id="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffffff"
            android:textAllCaps="false"
            android:clickable="true"
            android:layout_alignParentTop="false"
            android:layout_marginTop="10dp"/>
        <Button
            android:background="@drawable/buttonstylegreen"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="Freezer"
            android:id="@+id/button2"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:textColor="#ffffffff"
            android:textAllCaps="false"
            android:clickable="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:background="#3a210404"
        android:id="@+id/Date">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ff151515"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="160dp"
        android:id="@+id/Addfrom">

        <RelativeLayout
            android:id="@+id/red_rectan"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginTop="0dp"
            android:background="#FFFF4457">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add From"
                android:id="@+id/textView3"
                android:textColor="#ffffffff"
                android:textSize="18dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

        <TabHost
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:id="@+id/tabHost2"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonstylered"></TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="350dp">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="350dp"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="fill_parent"
                        android:layout_height="330dp"
                        android:orientation="vertical">

                        <TabHost
                            android:layout_width="fill_parent"
                            android:layout_height="350dp"
                            android:id="@+id/tabHost"
                            android:layout_marginTop="5dp"
                            android:layout_alignTop="@+id/red_rectan">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical">

                                <TabWidget
                                    android:id="@android:id/tabs"
                                    android:layout_width="fill_parent"
                                    android:layout_height="33dp"
                                    android:background="@drawable/buttonstyletab"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:clipToPadding="false"
                                    android:textAlignment="viewStart"
                                    android:layout_marginTop="5dp"></TabWidget>

                                <FrameLayout
                                    android:id="@android:id/tabcontent"
                                    android:layout_width="fill_parent"
                                    android:layout_height="330dp"
                                    android:layout_marginTop="10dp">

                                    <GridLayout
                                        android:id="@+id/tab1"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:orientation="vertical"
                                        android:columnCount="4"
                                        android:rowCount="4">

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/broccoli"
                                            android:layout_row="0"
                                            android:layout_column="0"
                                            android:src="@drawable/broccoli"
                                            android:tag="@string/broccoli"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="0dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/carrot"
                                            android:layout_row="0"
                                            android:layout_column="1"
                                            android:src="@drawable/carrot"
                                            android:tag="@string/carrot"
                                            android:layout_marginLeft="16dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/tomato"
                                            android:layout_row="0"
                                            android:layout_column="2"
                                            android:src="@drawable/tomato"
                                            android:tag="@string/tomato"
                                            android:layout_marginLeft="16dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/cucumber"
                                            android:layout_row="0"
                                            android:layout_column="3"
                                            android:src="@drawable/cucumber"
                                            android:tag="@string/cucumber"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginRight="0dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/potatoes"
                                            android:tag="@string/potatoes"
                                            android:layout_row="1"
                                            android:layout_column="0"
                                            android:src="@drawable/potatoes"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginTop="5dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/onion"
                                            android:layout_row="1"
                                            android:layout_column="1"
                                            android:src="@drawable/onion"
                                            android:tag="@string/onion"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginTop="5dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/lettuce"
                                            android:layout_row="1"
                                            android:layout_column="2"
                                            android:src="@drawable/lettuce"
                                            android:tag="@string/lettuce"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginLeft="16dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/beans"
                                            android:layout_row="1"
                                            android:layout_column="3"
                                            android:src="@drawable/beans"
                                            android:tag="@string/beans"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginRight="0dp"
                                            android:layout_marginLeft="16dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/corn"
                                            android:layout_row="2"
                                            android:layout_column="0"
                                            android:src="@drawable/corn"
                                            android:tag="@string/corn"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginRight="0dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/mushroom"
                                            android:layout_row="2"
                                            android:layout_column="1"
                                            android:src="@drawable/mushroom"
                                            android:tag="@string/mushroom"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginTop="5dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/chillies"
                                            android:layout_row="2"
                                            android:layout_column="2"
                                            android:src="@drawable/chillies"
                                            android:tag="@string/chillies"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginTop="5dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/cabbage"
                                            android:layout_row="2"
                                            android:layout_column="3"
                                            android:src="@drawable/cabbage"
                                            android:tag="@string/cabbage"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginTop="5dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/bellpepper"
                                            android:layout_row="3"
                                            android:layout_column="0"
                                            android:src="@drawable/bellpepper"
                                            android:tag="@string/bellpepper"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginRight="0dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/celery"
                                            android:layout_row="3"
                                            android:layout_column="1"
                                            android:src="@drawable/celery"
                                            android:tag="@string/celery"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginTop="5dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/cauliflower"
                                            android:layout_row="3"
                                            android:layout_column="2"
                                            android:src="@drawable/cauliflower"
                                            android:tag="@string/cawliflower"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginTop="5dp"
                                            android:onClick="add_item_to_grid"/>

                                        <ImageButton
                                            android:layout_width="70dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/pumpkin"
                                            android:layout_row="3"
                                            android:layout_column="3"
                                            android:src="@drawable/pumpkin"
                                            android:tag="@string/pumpkin"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginTop="5dp"
                                            android:onClick="add_item_to_grid"/>
                                    </GridLayout>

                                    <GridLayout
                                        android:id="@+id/tab2"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:orientation="vertical"></GridLayout>

                                    <GridLayout
                                    android:id="@+id/tab3"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:orientation="vertical"></GridLayout>

                                    <GridLayout
                                        android:id="@+id/tab4"
                                        android:layout_width="fill_parent"
                                        android:layout_height="350dp"
                                        android:orientation="vertical"></GridLayout>

                                    <GridLayout
                                        android:id="@+id/tab5"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:orientation="vertical"></GridLayout>

                                    <GridLayout
                                        android:id="@+id/tab6"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:orientation="vertical"></GridLayout>
                                </FrameLayout>
                            </LinearLayout>
                        </TabHost>
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/scrollView"
        android:layout_below="@+id/Date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:scrollbarSize="1dp">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnCount="100"
            android:id="@+id/AlreadyAdd"></GridLayout>
    </HorizontalScrollView>

</RelativeLayout>
