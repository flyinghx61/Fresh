<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:background="#fff6fff7"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="#ffaaff56"
        android:layout_alignParentTop="false">

        <Button
            android:background="@drawable/buttonstylegreen"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="Refrigerator"
            android:id="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffffff"
            android:textAllCaps="false"
            android:clickable="true"
            android:layout_alignParentTop="false"
            android:layout_marginTop="10dp"/>
        <Button
            android:background="@drawable/buttonstylegreen"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="Freezer"
            android:id="@+id/button2"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:textColor="#ffffffff"
            android:textAllCaps="false"
            android:clickable="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:background="#ffff1d22"
        android:id="@+id/Date">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostly Added:"
            android:id="@+id/textView2"
            android:textColor="#ffffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="325dp"
        android:background="#ffff1d22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories:"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffffff"
            android:textSize="18dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/Line1"
        android:background="#61202020"
        android:layout_below="@+id/Date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:password="false" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/Line2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:background="#61202020"
        android:layout_marginTop="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/Line3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="435dp"
        android:background="#61202020"
        android:layout_alignParentTop="false" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="New Text"
        android:id="@+id/Line4"
        android:background="#61202020"
        android:layout_marginTop="505dp"
        android:autoText="true" />

   <GridView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:id="@+id/gridView"
        android:layout_below="@+id/Date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:horizontalSpacing="20dp"
        android:verticalSpacing="6dp"
        android:numColumns="6"
        android:nestedScrollingEnabled="false"
        android:columnWidth="100dp"
        android:fastScrollAlwaysVisible="true" />

</RelativeLayout>
