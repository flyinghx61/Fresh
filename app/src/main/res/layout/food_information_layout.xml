<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/foodInformation">

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Name:"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/foodName"
        android:text=""
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignRight="@+id/textView8"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Category:"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Vegetable"
        android:id="@+id/textView8"
        android:textSize="20dp"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="Quality guarantee period:"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/qualityPeriod"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Best before:"
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/bestBefore"
        android:textSize="20dp"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignRight="@+id/qualityPeriod"
        android:layout_alignEnd="@+id/qualityPeriod" />

</RelativeLayout>
